{
  "name": "devops_quote_generator",
  "version": "1.0.0",
  "description": "A simple Node.js REST API that returns random inspirational quotes",
  "main":  "index.js",
  "scripts": {
    "start":  "node index.js",
    "dev": "node --watch index.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "lint": "eslint .",
