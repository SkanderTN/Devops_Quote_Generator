  "keywords": ["quote", "api", "devops", "nodejs", "express"],
  "author": "SkanderTN",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "babel-jest": "^30.2.0",
    "eslint": "^8.56.0",
    "jest":  "^29.7.0",
    "supertest": "^6.3.3"
  }
}